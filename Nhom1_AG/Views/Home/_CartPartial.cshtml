@model List<Nhom1_AG.Models.CartItem>

<h1 class="text-center text-primary mb-4">Giỏ hàng</h1>

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        Giỏ hàng của bạn hiện đang trống. Hãy thêm sản phẩm vào giỏ hàng!
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>Sản phẩm #@item.ShoeId</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-controller="Cart" asp-route-id="@item.ShoeId"
                           class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <a asp-action="AddToCart" asp-controller="Cart" class="btn btn-success btn-lg">Thêm sản phẩm vào giỏ</a>
    </div>
}
